
<form asp-controller="Entry" asp-action="CalculadoraGrafica" method="post">
    
    <div class="text-center">
    <p>Resultado: @ViewData["res"]</p>
    <input type="text" asp-for-a name="a" id="a" value=@ViewData["a"] />
        <select  id ="op" name="op">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">x</option>
            <option value="/">÷</option>
        </select>
        <input type="text" asp-for-b name="b" id="b" value=@ViewData["b"] /> 
    <button type="submit">Somar</button>
    </div>
</form>
